import sqlite3

conn = sqlite3.connect('retail.db')
cursor = conn.cursor()

# Insert sample customers
try:
    cursor.execute("INSERT INTO Customers (name, email, phone, address) VALUES ('John Doe', 'john1@example.com', '0123456789', 'KL')")
    cursor.execute("INSERT INTO Customers (name, email, phone, address) VALUES ('Jane Smith', 'jane2@example.com', '0198765432', 'JB')")
except sqlite3.IntegrityError:
    print(" Some emails already exist. Skipping duplicate inserts.")

# Insert sample orders
cursor.execute("INSERT INTO Orders (customer_id, product_name, order_date, quantity) VALUES (1, 'T-shirt', '2025-08-01', 2)")
cursor.execute("INSERT INTO Orders (customer_id, product_name, order_date, quantity) VALUES (2, 'Shoes', '2025-08-03', 1)")

print(" Sample data inserted successfully.")
conn.commit()
conn.close()

